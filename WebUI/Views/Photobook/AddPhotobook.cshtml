@model Domain.Entities.Photobook
@{
    ViewBag.Title = "Add Photobook";
    Layout = "~/Views/Photobook/_PhotobookLayout.cshtml";

}

<h2>Add Photobook</h2>

<div class="section">
    <div class="container">
        <div class="row">
                <div class="col-md-offset-2 col-md-4">

                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary()

                        <div class="form-group">
                            <label>@Html.DisplayNameFor(m => m.Title)</label>
                            @Html.TextBoxFor(p => p.Title, new { @class = "form-control text-center" })
                        </div>

                        <button type="submit" class="btn btn-default">
                            Create
                        </button>
                    }

            </div>
        </div>
    </div>
</div>