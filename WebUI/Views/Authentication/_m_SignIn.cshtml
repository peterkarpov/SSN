@model WebUI.Models.AuthenticationViewModel

<!-- Modal -->
<div class="modal fade" id="mSignIn" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Sign In</h4>
            </div>
            <div class="modal-body text-center">
                @using (Html.BeginForm("SignIn", "Authentication", FormMethod.Post))
                {
                    @Html.ValidationSummary(null, new { @class = "text-danger text-left" })

                    <div class="form-group">
                        <label>@Html.LabelFor(m => m.UserName)</label>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control text-center" })
                    </div>
                    <div class="form-group">
                        <label>@Html.LabelFor(m => m.Password)</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control text-center" })
                    </div>
                    <button type="submit" class="btn btn-default">
                        Sign In
                        <br>
                    </button>
                }
            </div>
        </div>
    </div>
</div>
