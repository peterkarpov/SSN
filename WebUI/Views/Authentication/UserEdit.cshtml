@model WebUI.Models.RegistrationViewModel
@{
    ViewBag.Title = "User Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="col-md-offset-2 col-md-6 text-center">

    <h2 class="text-center">UserEdit</h2>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(null, new { @class = "text-danger text-left" })

        <div class="form-group">
            <label>@Html.LabelFor(m=>m.UserName)</label>
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control text-center" })
        </div>

        <div class="form-group">
            <label>@Html.LabelFor(m => m.Email)</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control text-center" })
        </div>
        <div class="form-group">
            <label>@Html.LabelFor(m => m.Password)</label>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control text-center" })
        </div>
        <div class="form-group">
            <label>@Html.LabelFor(m => m.ConfirmPassword)</label>
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control text-center" })
        </div>
        <button type="submit" class="btn btn-default center-block">
            Save Changes
            <br>
        </button>
    }
</div>



