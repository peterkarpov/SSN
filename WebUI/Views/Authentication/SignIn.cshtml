@model WebUI.Models.AuthenticationViewModel

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    @System.Web.Optimization.Styles.Render("~/Content/css/jqueryui")
    @System.Web.Optimization.Styles.Render("~/Content/css")
    @System.Web.Optimization.Scripts.Render("~/bundles/modernizr")

</head>

<body>
    @Html.Partial("_HeaderSection");
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-offset-3 col-md-6 text-center">
                        @using (Html.BeginForm())
                        {
                            @Html.ValidationSummary(null, new { @class = "text-danger text-left" })

                            <div class="form-group">
                                <label>@Html.LabelFor(m => m.UserName)</label>
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control text-center" })
                            </div>
                            <div class="form-group">
                                <label>@Html.LabelFor(m => m.Password)</label>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control text-center" })
                            </div>
                            <button type="submit" class="btn btn-default">
                                Sign In
                                <br>
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    @System.Web.Optimization.Scripts.Render("~/bundles/jquery")
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryui")
    @System.Web.Optimization.Scripts.Render("~/bundles/bootstrap")

    @System.Web.Optimization.Scripts.Render("~/Scripts/bootstrap-tooltip")
    @System.Web.Optimization.Scripts.Render("~/Scripts/bootstrap-typeahead")

    @System.Web.Optimization.Scripts.Render("~/Scripts/jquery.unobtrusive-ajax")


</body>
</html>
