@model IEnumerable<Domain.Entities.Image>
@{
    ViewBag.Title = "ImagesForSetAvatar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Images for set Avatar</h2>
<p>Click on example image</p>

<div class="col-md-12">
    <div class="section">
        <div class="container-fluid">

            <div class="row">
                <div class="col-md-12">
                    <h1 class="text-center">Have @Model.Count() items</h1>
                </div>
            </div>

            <div class="row">
                @foreach (var image in Model)
                {
                    <div class="col-md-4">
                        <a href="@(Url.Action("SetAvatar", "Profile", new { ImageId = image.ImageId}))">
                            <img src="@(Url.Action("GetImage", "Image", new { ImageId = image.ImageId }))" class="img-responsive" />
                        </a>
                        <br />
                    </div>
                }
            </div>

        </div>
    </div>
</div>